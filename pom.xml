<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.lunifera</groupId>
		<artifactId>org.lunifera</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<groupId>org.lunifera.runtime</groupId>
	<artifactId>org.lunifera.runtime</artifactId>

	<packaging>pom</packaging>
	<name>Lunifera :: Runtime Components : Parent POM</name>

	<properties>
		<next-release>0.0.2-SNAPSHOT</next-release>
	</properties>

	<profiles>
		<profile>
			<id>prepare-for-next-release</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<defaultGoal>org.eclipse.tycho:tycho-versions-plugin:set-version</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>tycho-versions-plugin</artifactId>
						<version>${tycho-version}</version>
						<executions>
							<execution>
								<id>change-next-release</id>
								<goals>
									<goal>set-version</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<newVersion>${next-release}</newVersion>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>p2-juno</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<module>org.lunifera.runtime.p2</module>
				<module>org.lunifera.runtime.target.juno</module>

				<module>org.lunifera.runtime.feature.configuration.manager</module>
				<module>org.lunifera.runtime.feature.utils.assertions</module>
				<module>org.lunifera.runtime.utils.osgi.assertions</module>
				<module>org.lunifera.runtime.component.configuration.manager</module>
				<module>org.lunifera.runtime.component.configuration.manager.test.conf</module>
				<module>org.lunifera.runtime.component.configuration.manager.tests</module>
			</modules>
			<build>
				<defaultGoal>clean verify</defaultGoal>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.eclipse.tycho</groupId>
							<artifactId>target-platform-configuration</artifactId>
							<version>${tycho-version}</version>
							<configuration>
								<ignoreTychoRepositories>true</ignoreTychoRepositories>
								<target>
									<artifact>
										<groupId>org.lunifera.runtime</groupId>
										<artifactId>org.lunifera.runtime.target.juno</artifactId>
										<version>${project.version}</version>
									</artifact>
								</target>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		<profile>
			<id>p2-kepler</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<module>org.lunifera.runtime.p2</module>
				<module>org.lunifera.runtime.target.kepler</module>

				<module>org.lunifera.runtime.feature.configuration.manager</module>
				<module>org.lunifera.runtime.feature.utils.assertions</module>
				<module>org.lunifera.runtime.utils.osgi.assertions</module>
				<module>org.lunifera.runtime.component.configuration.manager</module>
				<module>org.lunifera.runtime.component.configuration.manager.test.conf</module>
				<module>org.lunifera.runtime.component.configuration.manager.tests</module>
			</modules>
			<build>
				<defaultGoal>clean verify</defaultGoal>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.eclipse.tycho</groupId>
							<artifactId>target-platform-configuration</artifactId>
							<version>${tycho-version}</version>
							<configuration>
								<ignoreTychoRepositories>true</ignoreTychoRepositories>
								<target>
									<artifact>
										<groupId>org.lunifera.runtime</groupId>
										<artifactId>org.lunifera.runtime.target.kepler</artifactId>
										<version>${project.version}</version>
									</artifact>
								</target>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-compiler-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
			</plugin>
		</plugins>


	</build>

</project>